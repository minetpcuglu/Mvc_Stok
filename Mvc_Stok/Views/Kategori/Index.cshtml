@using Mvc_Stok.Models.Entity
@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<Tbl_Kategoriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
    
    <table class="table table-bordered">
        <tr>
            <th>KATEGORİ ID</th>
            <th>KATEGORİ ADI</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
            <th>ALLERT</th>
        </tr>
        <tbody>
            @foreach (var ktgr in Model)
            {
            <tr>
                <th>@ktgr.KategoriID</th>
                <td>@ktgr.KategoriAdı</td>
                <td><a href="/KATEGORI/SIL/@ktgr.KategoriID" class="btn btn-danger">Sil</a></td>
                <td><a href="/KATEGORI/KategoriGetir/@ktgr.KategoriID" class="btn btn-success">Güncelle</a></td>
                <td>@Html.ActionLink("Onaylı Sil", "SIL", new { id = ktgr.KategoriID }, new { @class = "btn btn-warning", onclick = "return confirm('Silme işlemini onaylıyor musunuz ? ')" }) </td>
            </tr>
            }
        </tbody>
    </table>

@Html.PagedListPager((IPagedList)Model, sayfa=>Url.Action("Index",new { sayfa}))
<a href="/KATEGORI/YeniKategori/" class="btn btn-primary">Yeni Kategori Ekle</a>
