@using Mvc_Stok.Models.Entity
@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<Tbl_Urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>URUN ID</th>
            <th>URUN ADI</th>
            <th>URUN KATEGORİ</th>
            <th>URUN FİYAT</th>
            <th>URUN MARKA</th>
            <th>KALAN STOK</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
            <th>Allert</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var urnler in Model)
        {
            <tr>
                <th>@urnler.UrunId</th>
                <td>@urnler.UrunAdı</td>
                <td>@urnler.Tbl_Kategoriler.KategoriAdı</td>
                <td>@urnler.UrunFiyat</td>
                <td>@urnler.UrunMarka</td>
                <td>@urnler.Stok</td>
                <td><a href="/URUN/SIL/@urnler.UrunId" class="btn btn-danger">Sil</a></td>
                <td><a href="/URUN/UrunGetir/@urnler.UrunId" class="btn btn-success">Güncelle</a></td>
                <td>@Html.ActionLink("Onaylı Sil", "SIL", new { id = urnler.UrunId }, new { @class = "btn btn-warning", onclick = "return confirm('Silme işlemini onaylıyor musunuz ? ')" }) </td>

            </tr>

        }
    </tbody>
</table>


@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))

<a href="/URUN/YeniUrunEkle" class="btn btn-primary">Yeni Ürün Ekle</a>
